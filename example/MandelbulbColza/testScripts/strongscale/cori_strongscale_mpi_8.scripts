#!/bin/bash
#SBATCH --qos=debug
#SBATCH --nodes=18
#SBATCH --tasks-per-node=32
#SBATCH --time=10:00
#SBATCH --licenses=cscratch1
#SBATCH --constraint=haswell

export BUILDDIR=/global/cscratch1/sd/zw241/build_monavtk
export SRCDIR=/global/homes/z/zw241/cworkspace/src/mona-vtk
cd $BUILDDIR
# run this in the build dir of the monavtk
BLOCKNUM=2048
#server get the blocknum from env
export BLOCKNUM=2048
STEP=10
PROTOCOL=gni
SSGFILE=ssgfile
BACKEND=$BUILDDIR/example/MandelbulbColza/libmpibackend-pipeline.so
CONFIG=$SRCDIR/example/MandelbulbColza/pipeline/mpiconfig.json

rm $SSGFILE global_cred_conf

# 1 nodes for server (16*4=64=2*32)
srun -C haswell -N 2 -n 8 -c 16 --cpu_bind=cores ./example/MandelbulbColza/mbserver -a $PROTOCOL -s $SSGFILE -c $CONFIG -t 1 &> mbserver_mpi_8.log &

#make sure the server load the pipeline
result=0
while [ $result -ne 8 ]
do
    result=$(cat mbserver_mpi_8.log | grep "Server running at" | wc -l)
    echo "$result server loaded backend"
    sleep 1  
done
# 16 nodes for client, 16*32=512, 512*8=4096 (maybe get this from the env, 2 hyperthread for one physical core)
srun -C haswell -N 16 -n 512 -c 2 --cpu_bind=cores ./example/MandelbulbColza/mbclient -a $PROTOCOL -s $SSGFILE -p mpibackend -b $BLOCKNUM -t $STEP > mbclient_mpi_8_512.log

wait
